{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "jsx": "react",
    "preserveConstEnums": true,
    "removeComments": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": "."
  },
  "typeRoots": [
    "./types",
    "node_modules/@types"
  ],
  "lib": [
    "es2015",
    "es2016",
    "es2017",
    "dom"
  ],
  "paths": {
    "components/*": [
      "./components/*"
    ],
    "types/*": [
      "./types/*"
    ],
    "static/*": [
      "./static/*"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "components/**/*"
  ]
}